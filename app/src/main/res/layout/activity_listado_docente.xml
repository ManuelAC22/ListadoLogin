<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.autonoma.apploginlistado.ListadoDocenteActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="14dp"
        android:text="Agregar Docentes"
        android:textColor="#000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/txtNombreDocente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Ingrese Nombre"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtApellidoDocente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNombreDocente"
        android:layout_below="@+id/txtNombreDocente"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Ingrese Apellido"/>

    <Button
        android:id="@+id/addDocente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtNombreDocente"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="27dp"
        android:background="@color/colorAccent"
        android:text="Agregar"
        android:textColor="#fff" />

    <ListView
        android:id="@+id/listadoDocentes"
        android:layout_width="520dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtApellidoDocente"
        android:layout_marginTop="15dp"/>


</RelativeLayout>
